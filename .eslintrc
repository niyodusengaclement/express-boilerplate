{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", { "code": 100 }],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "comma-dangle": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "space-before-function-paren": "off",
    "import/no-unresolved": [2, { "caseSensitive": false }],
    "camelcase": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./src"]
      }
    }
  }
}
